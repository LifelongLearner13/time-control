{
  "name": "Time Control",
  "description": "Persist time span preferences across multiple Google searches.",
  "version": "1.0",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    },
    "default_title": "Time Control",
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "webNavigation",
    "activeTab",
    "*://*.google.com/*",
    "declarativeContent"
  ],
  "icons" : {
    "16": "images/icon16.png",
    "24": "images/icon24.png",
    "32": "images/icon32.png"
  },
  "manifest_version": 2
}
