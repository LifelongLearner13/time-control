{
  "manifest_version": 2,

  "name": "Time Control",
  "description": "Persist time span preferences accross multiple Google searches.",
  "version": "1.0",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    },
    "default_title": "Time Control",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "http://*.google.com/",
  ]
}
